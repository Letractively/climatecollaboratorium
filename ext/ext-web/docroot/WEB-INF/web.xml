    <servlet>
        <servlet-name>MessagingServlet</servlet-name>
        <servlet-class>com.ext.portlet.mass_messaging.MessagingServlet</servlet-class>
    </servlet>
    
    
    <servlet>
        <servlet-name>GoogleAnalyticsFilterCookie</servlet-name>
        <servlet-class>com.ext.googleanalytycs.CollabStaffMemberCookieServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>LandingPageServlet</servlet-name>
        <servlet-class>com.ext.portlet.landingPage.LandingPageServlet</servlet-class>
    </servlet>
    
