        <servlet-name>GoogleAnalyticsFilterCookie</servlet-name>
        <url-pattern>/googleanalyticsfilter</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>LandingPageServlet</servlet-name>
        <url-pattern>/landingpage/*</url-pattern>
    
    </servlet-mapping>
    
