<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="1.2" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">
	<!-- application related managed beans -->
	<application>
		<view-handler>com.icesoft.faces.facelets.D2DFaceletViewHandler</view-handler>
	</application>
	<factory/>
    <managed-bean>
        <managed-bean-name>permissions</managed-bean-name>
        <managed-bean-class>org.climatecollaboratorium.debatebrowser.DebateBrowserPermissions</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
	<managed-bean>
		<managed-bean-name>debateBrowserPreferences</managed-bean-name>
		<managed-bean-class>org.climatecollaboratorium.debatebrowser.DebateBrowserPreferences</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>debateBrowserBean</managed-bean-name>
		<managed-bean-class>org.climatecollaboratorium.debatebrowser.DebateBrowserBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>preferences</property-name>
			<value>#{debateBrowserPreferences}</value>
		</managed-property>
		<managed-property>
			<property-name>initialize</property-name>
			<value>initialize</value>
		</managed-property>
	</managed-bean>
</faces-config>