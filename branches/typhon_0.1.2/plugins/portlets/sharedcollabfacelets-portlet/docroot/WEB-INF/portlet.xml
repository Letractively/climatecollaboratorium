<?xml version="1.0" encoding="UTF-8"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.0" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">
	<portlet>
		<portlet-name>sharedcollabfacelets</portlet-name>
		<display-name>Shared Collab Facelets</display-name>
		<portlet-class>com.icesoft.faces.webapp.http.portlet.MainPortlet</portlet-class>
		<init-param>
			<name>com.icesoft.faces.VIEW</name>
			<value>/xhtml/view.iface</value>
		</init-param>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<portlet-info>
			<title>MIT Shared Collab Facelets (ICE)</title>
			<short-title>Shared Collab Facelets Portlet</short-title>
			<keywords>Shared Collab Facelets</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>